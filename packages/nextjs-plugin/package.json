{
  "name": "@forge-go/nextjs-plugin",
  "version": "0.1.0",
  "description": "Next.js integration for Forge dashboard contributors",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@forge-go/bridge-client": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT"
}
